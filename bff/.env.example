# Pulsar Configuration (DataStax Astra Streaming)
PULSAR_SERVICE_URL=pulsar+ssl://pulsar-aws-useast2.streaming.datastax.com:6651
PULSAR_TOKEN=YOUR_PULSAR_TOKEN
PULSAR_TENANT=miso-1-2025
PULSAR_NAMESPACE=default

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_REQUIRE_VALIDATION=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8002
API_RELOAD=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# External Services
CAMPAIGN_SERVICE_URL=http://localhost:8003
EVIDENCE_SERVICE_URL=http://localhost:8004
PAYMENT_SERVICE_URL=http://localhost:8005

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
METRICS_ENABLED=true
TRACING_ENABLED=true
HEALTH_CHECK_INTERVAL=30