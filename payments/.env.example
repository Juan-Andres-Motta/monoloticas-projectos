# Database URL for PostgreSQL
DATABASE_URL=postgresql+asyncpg://user:password@localhost/paymentsdb

# Pulsar service URL (default is localhost, for Astra use pulsar+ssl://...)
PULSAR_SERVICE_URL=pulsar://localhost:6650

# Pulsar token for authentication (leave empty for no auth)
PULSAR_TOKEN=

# Pulsar topic for payment request events
PULSAR_TOPIC=persistent://miso-1-2025/default/payments-request