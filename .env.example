# ===========================================
# MICROSERVICES PROJECT - ENVIRONMENT TEMPLATE
# ===========================================
# Copy this file to .env and update the values

# ===========================================
# BFF SERVICE CONFIGURATION
# ===========================================

# BFF Service
BFF_SERVICE_CONTAINER=bff-service
BFF_SERVICE_PORT=8002

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_REQUIRE_VALIDATION=false

# API Configuration
BFF_API_HOST=0.0.0.0
BFF_LOG_LEVEL=INFO

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Tracking Database
TRACKING_DB_HOST=tracking-db
TRACKING_DB_PORT=5432
TRACKING_DB_NAME=trackingdb
TRACKING_DB_USER=tracking_user
TRACKING_DB_PASSWORD=tracking_password
TRACKING_DATABASE_URL=postgresql://tracking_user:tracking_password@tracking-db:5432/trackingdb

# Commission Database  
COMMISSION_DB_HOST=commission-db
COMMISSION_DB_PORT=5432
COMMISSION_DB_NAME=commissiondb
COMMISSION_DB_USER=commission_user
COMMISSION_DB_PASSWORD=commission_password
COMMISSION_DATABASE_URL=postgresql://commission_user:commission_password@commission-db:5432/commissiondb

# ===========================================
# APACHE PULSAR / DATASTAX ASTRA STREAMING
# ===========================================

# DataStax Astra Streaming Configuration
PULSAR_SERVICE_URL=pulsar+ssl://your-cluster.streaming.datastax.com:6651
PULSAR_TOKEN=your_datastax_token_here
PULSAR_TENANT=your-tenant-name
PULSAR_NAMESPACE=default
PULSAR_TOPIC=persistent://your-tenant-name/default/tracking-events

# ===========================================
# MICROSERVICES CONFIGURATION
# ===========================================

# Tracking Service
TRACKING_SERVICE_PORT=8000
TRACKING_SERVICE_HOST=0.0.0.0

# Commission Service
COMMISSION_SERVICE_PORT=8001
COMMISSION_SERVICE_HOST=0.0.0.0

# ===========================================
# DATABASE ADMIN CONFIGURATION
# ===========================================

# Adminer Configuration
ADMINER_PORT=9001
ADMINER_DEFAULT_SERVER=tracking-db
ADMINER_DEFAULT_DB_DRIVER=pgsql

# ===========================================
# DOCKER CONFIGURATION
# ===========================================

# Container Names
TRACKING_DB_CONTAINER=tracking-postgres
COMMISSION_DB_CONTAINER=commission-postgres
TRACKING_SERVICE_CONTAINER=tracking-service
COMMISSION_SERVICE_CONTAINER=commission-service
ADMINER_CONTAINER=microservices-adminer

# Network
NETWORK_NAME=microservices

# Volumes
TRACKING_VOLUME=tracking_data
COMMISSION_VOLUME=commission_data
